{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Azure CLI Debug (Integrated Console)",
            "type": "python",
            "request": "launch",
            "pythonPath": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/src/azure-cli/azure/cli/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "apim",
                "subscription",
                //"update",
                "keys",   
                "list",             
                //"--key-kind", "primary",
                "--resource-group", "petetest10",
                "--name", "peterod",
                "--sid", "petetestsub08",
                
                //"--display_name", "petetestsub09",
                 //"--scope", "/apis",
                // "--owner-id", "jeffseag",
                // "--allow-tracing"
            ],
            "console": "integratedTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "justMyCode": false
        },
        {
            "name": "Azure CLI Debug (External Console)",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "pythonPath": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/src/azure-cli/azure/cli/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "--help"
            ],
            "console": "externalTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit"
            ]
        },
        {
            "name": "Azdev Scripts",
            "type": "python",
            "request": "launch",
            "pythonPath": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/tools/automation/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "--help"
            ],
            "console": "integratedTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]
}
